    <link rel="stylesheet" href="css/style.css">
    <link rel="shortcut icon" href="img/weather.png" type="image/png">
</head>
<body>
    <!-- Navbar -->
{{>navbar}}
    <!-- main header  -->

    <div class="container-fluid mainHeader">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">

                <div class="mainContent">
                    <form action="" class="tempForm">
                        <input type="text" name="temp" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="submit">
                    </form>
                </div>

                <div class="tempInfo">
                    <div class="topLayer">
                        <p id="day">Tuseday</p>
                        <p id="todayDate">12 june</p>
                    </div>
                    <div class="mainLayer">
                        <p id="city_name">Get output Here</p>
                        <div class="middleLayer data_hide">
                            <p id="temp">0Â°C</p>
                            <p id="tempStatus"><i class="fa-solid fa-cloud"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- footer code  -->
{{>footer}}

<script src="js/main.js"></script>
<script>
        const curDate = document.getElementById('todayDate')
        const curDay = document.getElementById('day')
        const getCurDay = () =>{
            var weekday = ['Sunday','Monday','Tuesday','Wednesday','Thursday','Friday','Saturday']

            let curTime = new Date()
            day = weekday[curTime.getDay()]
            curDay.innerText = day
        }
        getCurDay()
        
        const getCurMonth = () =>{
            var monthNames = ["January", "February", "March", "April","May","June","July","August","September","October","November","December"]
            let curTime = new Date()
            var Month = monthNames[curTime.getMonth()]
            var Day = curTime.getDate()
            todaydate = Month+" "+Day
            curDate.innerHTML= todaydate
        }
        getCurMonth()

</script>
</body>
</html>